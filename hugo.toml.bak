baseURL = "https://buddyowens.net/"
languageCode = "en-us"
title = "Buddy Owens"
theme = "PaperMod"
canonifyURLs = true
relativeURLs = false

[params]
  env = "production"
  mainSections = ["posts"]

  ShowReadingTime = true
  ShowShareButtons = true
  ShowPostNavLinks = true
  ShowBreadCrumbs = true
  ShowCodeCopyButtons = true
  ShowToc = true

[params.cover]
  hidden = false
  hiddenInList = false
  hiddenInSingle = false
  responsiveImages = true

[params.profileMode]
  enabled = true
  title = "Buddy Owens"
  subtitle = "Data Science Portfolio"
  imageUrl = "images/avatar.png"
  imageTitle = "Profile"
  imageWidth = 120
  imageHeight = 120
  [[params.profileMode.buttons]]
    name = "Posts"
    url = "/posts/"
  [[params.profileMode.buttons]]
    name = "GitHub"
    url = "https://github.com/YOUR_USERNAME"

[[params.social]]
  name = "github"
  url = "https://github.com/YOUR_USERNAME"

[[params.social]]
  name = "linkedin"
  url = "https://linkedin.com/in/YOUR_HANDLE"

[taxonomies]
  tag = "tags"
  series = "series"

[menu]
  [[menu.main]]
    identifier = "posts"
    name = "Posts"
    url = "/posts/"
    weight = 1
  [[menu.main]]
    identifier = "about"
    name = "About"
    url = "/about/"
    weight = 2

[outputs]
  home = [ "HTML", "RSS", "JSON" ]